extends layout

block vars
    - var title = "Player two - Files"

block content
    h1 Files
    .row
    - for (var i in files) {
        .tile.col-xs-12.col-sm-4.col-md-3
          a.img-wrapper(href="/dl#{files[i].path}")
            .bg-img(style="background-image:url('#{files[i].path}')")
            span.glyphicon.glyphicon-circle-arrow-down.action-icon
          div.tile-footer.bg-4(title="#{files[i].name}") #{files[i].name}              
    -}

block footer