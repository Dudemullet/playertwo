doctype html
html(lang='en')
    head
        include blocks/meta
        block vars
        title=(title?title:locals.title)

    body(class=locals.page ? 'page-' + locals.page + (locals.page === 'index' ? '' : ' page-secondary') : '')
        .container
            block content
    footer
        block footer
    
    script(type='text/javascript', src='/js/vendor.js')
    block scripts